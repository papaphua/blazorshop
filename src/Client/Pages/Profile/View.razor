@page "/profile/view/{username}"

<Row Flex="Flex.JustifyContent.Center.AlignItems.Center">
    <Column ColumnSize="ColumnSize.Is6.OnDesktop">
        <Card>
            <CardHeader>
                <CardTitle>@User.Username's profile</CardTitle>
            </CardHeader>
            <CardBody>
                <Field>
                    <FieldLabel>Username</FieldLabel>
                    <FieldBody>
                        <TextEdit @bind-Text="@User.Username" Disabled/>
                    </FieldBody>
                </Field>

                <Field>
                    <FieldLabel>First name</FieldLabel>
                    <FieldBody>
                        <TextEdit @bind-Text="@User.FirstName" Disabled/>
                    </FieldBody>
                </Field>
                <Field>
                    <FieldLabel>Last name</FieldLabel>
                    <FieldBody>
                        <TextEdit @bind-Text="@User.LastName" Disabled/>

                    </FieldBody>
                </Field>
                <Field>
                    <FieldLabel>Gender</FieldLabel>
                    <FieldBody>
                        <Select TValue="string" @bind-SelectedValue="User.Gender" Disabled>
                        </Select>
                    </FieldBody>
                </Field>
                <Field>
                    <FieldLabel>Birth date</FieldLabel>
                    <FieldBody>
                        <DateEdit TValue="DateTime?" @bind-Date="@User.BirthDate" Disabled/>
                    </FieldBody>
                </Field>
            </CardBody>
        </Card>
    </Column>
</Row>