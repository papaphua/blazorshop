@page "/accounts/password/reset/confirmation"

<Row Flex="Flex.JustifyContent.Center.AlignItems.Center" Margin="Margin.Is5.FromTop">
    <Column ColumnSize="ColumnSize.Is6.OnDesktop">
        <Card>
            <CardHeader>
                <CardTitle>Reset password</CardTitle>
            </CardHeader>
            <CardBody>
                <EditForm Model="@PasswordResetDto" OnValidSubmit="ResetAction">
                    <Validations @ref="_validations" ValidateOnLoad="false" Mode="ValidationMode.Auto" Model="PasswordResetDto">
                        <DataAnnotationsValidator/>
                        <Validation>
                            <Field>
                                <FieldLabel>New password</FieldLabel>
                                <FieldBody>
                                    <TextEdit Role="TextRole.Password"
                                              Placeholder="Enter new password" @bind-Text="@PasswordResetDto.NewPassword">
                                        <ValidationError/>
                                    </TextEdit>
                                </FieldBody>
                            </Field>
                        </Validation>
                        <Validation>
                            <Field>
                                <FieldLabel>Confirm new password</FieldLabel>
                                <FieldBody>
                                    <TextEdit Role="TextRole.Password"
                                              Placeholder="Confirm new password" @bind-Text="@PasswordResetDto.ConfirmPassword">
                                        <ValidationError/>
                                    </TextEdit>
                                </FieldBody>
                            </Field>
                        </Validation>
                        <Button Color="Color.Primary" Type="ButtonType.Submit">Confirm</Button>
                    </Validations>
                </EditForm>
            </CardBody>
        </Card>
    </Column>
</Row>