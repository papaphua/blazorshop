@page "/accounts/login/find"

<Row Flex="Flex.JustifyContent.Center.AlignItems.Center" Margin="Margin.Is5.FromTop">
    <Column ColumnSize="ColumnSize.Is6.OnDesktop">
        <Card>
            <CardHeader>
                <CardTitle>Login</CardTitle>
            </CardHeader>
            <CardBody>
                <EditForm Model="@LoginDto" OnValidSubmit="ContinueAction">
                    <Validations @ref="_validations" ValidateOnLoad="false" Mode="ValidationMode.Auto" Model="LoginDto">
                        <DataAnnotationsValidator/>
                        <Validation>
                            <Field>
                                <FieldLabel>Username or email address</FieldLabel>
                                <FieldBody>
                                    <TextEdit Placeholder="Enter username or email address" @bind-Text="@LoginDto.Login">
                                        <ValidationError/>
                                    </TextEdit>
                                </FieldBody>
                            </Field>
                        </Validation>
                        <Button Color="Color.Primary" Type="ButtonType.Submit">Continue</Button>
                    </Validations>
                </EditForm>
            </CardBody>
            <CardFooter>
                Don't have an account? <Link To="/accounts/register">Sign up</Link>
            </CardFooter>
        </Card>
    </Column>
</Row>