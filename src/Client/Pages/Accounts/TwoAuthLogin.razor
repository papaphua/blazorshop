@page "/accounts/login/2fa"

<Row Flex="Flex.JustifyContent.Center.AlignItems.Center" Margin="Margin.Is5.FromTop">
    <Column ColumnSize="ColumnSize.Is6.OnDesktop">
        <Card>
            <CardHeader>
                <CardTitle>Login</CardTitle>
            </CardHeader>
            <CardBody>
                <EditForm Model="@TwoAuthLoginDto" OnValidSubmit="LoginAction">
                    <Validations @ref="_validations" ValidateOnLoad="false" Mode="ValidationMode.Auto" Model="TwoAuthLoginDto">
                        <DataAnnotationsValidator/>
                        <Validation>
                            <Field>
                                <FieldLabel>Username or email address</FieldLabel>
                                <FieldBody>
                                    <TextEdit Placeholder="Enter username or email address" @bind-Text="@TwoAuthLoginDto.Login" Disabled>
                                        <ValidationError/>
                                    </TextEdit>
                                </FieldBody>
                            </Field>
                        </Validation>
                        <Validation>
                            <Field>
                                <FieldLabel>Password</FieldLabel>
                                <FieldBody>
                                    <TextEdit Role="TextRole.Password"
                                              Placeholder="Enter password" @bind-Text="@TwoAuthLoginDto.Password">
                                        <ValidationError/>
                                    </TextEdit>
                                </FieldBody>
                            </Field>
                        </Validation>
                        <Validation>
                            <Field>
                                <FieldLabel>Confirmation code</FieldLabel>
                                <FieldBody>
                                    <TextEdit Role="TextRole.Password"
                                              Placeholder="Enter confirmation code from email" @bind-Text="@TwoAuthLoginDto.ConfirmationCode">
                                        <ValidationError/>
                                    </TextEdit>
                                </FieldBody>
                            </Field>
                        </Validation>
                        <Button Color="Color.Primary" Type="ButtonType.Submit">Continue</Button>
                    </Validations>
                </EditForm>
            </CardBody>
        </Card>
        <CardFooter>
            <Link To="/accounts/password/reset">Forgot password?</Link>
        </CardFooter>
    </Column>
</Row>